# Base de datos
# PostgreSQL connection string for the EduPlay backend
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/eduplay?schema=public"

# n8n Webhooks
# Base URL for n8n webhook endpoints
N8N_WEBHOOK_URL="http://localhost:5678/webhook"

# Ollama (AI)
# URL for Ollama API (local AI model server)
OLLAMA_URL="http://localhost:11434"

# Servidor
# Port for the NestJS backend server
PORT=3000

# Environment mode (development, production, test)
NODE_ENV=development

# JWT Authentication
# Secret key for JWT token generation (CHANGE IN PRODUCTION!)
JWT_SECRET="eduplay_hackathon_secret_2025"

# JWT token expiration time
JWT_EXPIRES_IN="7d"
